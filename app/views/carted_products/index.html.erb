<h1>Your Shopping Cart </h1>

<table class="table">
  <tr>
    <th>STATUS</th>
    <th>PRODUCT ID</th>
    <th>QUANTITY</th>
    <th>USER ID</th>
    <th>ACTION</th>
  </tr>
<% @carted_products.each do |carted_product| %>
  <tr>
    <td><%= carted_product.status %></td>
    <td><%= carted_product.product_id %></td>
    <td><%= carted_product.quantity %></td>
    <td><%= carted_product.user_id %></td>
    <td> <%= link_to "Delete", "/cart/#{carted_product.id}", method: :patch, data:{confirm: "Are You Sure"} %> </td>
  </tr>
<% end %>
</table>

<h4> Current subtotal: <%= number_to_currency(@subtotal) %> </h4>

<%=form_tag '/orders', method: :post do %>

  <div class="input-group">
    <%=hidden_field_tag :quantity, @total_quantity, class: "form-control" %>
  </div>

  <div class="input-group">
    <%=hidden_field_tag :subtotal, @subtotal, class: "form-control" %>
  </div>

  <div class="input-group">
    <%=hidden_field_tag :user_id, current_user.id, class: "form-control" %>
  </div>
            
  <%= submit_tag "Buy Now", :class => "btn btn-primary", :role => "button" %>

<% end %>