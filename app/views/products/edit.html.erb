<div id="box">

<div id="show-text">

<h1>Update</h1>

<%=form_tag "/products/#{@product.id}", method: :patch do %>

  <div class="field">
    <%=label_tag :name %>
    <%=text_field_tag :name, @product.name %>
  </div>

  <div class="field">
    <%=label_tag :price %>
    <%=text_field_tag :price, @product.price %>
  </div>

  <div class="field">
    <%=label_tag :description %>
    <%=text_field_tag :description, @product.description %>
  </div>


  <div class="field">
    <%=label_tag :inventory %>
    <%=text_field_tag :inventory, @product.inventory %>
  </div>

  <%= submit_tag "Send" %>

  <% end %>
  </div>
  </div>