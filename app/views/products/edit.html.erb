<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">

  <h1>Update a product</h1>

    <div class="form">

      <%=form_tag "/products/#{@product.id}", method: :patch do %>

        <div class="input-group">
          <%=label_tag :name %>
          <%=text_field_tag :name, @product.name %>
        </div>

        <div class="input-group">
          <%=label_tag :price %>
          <%=text_field_tag :price, @product.price %>
        </div>

        <div class="input-group">
          <%=label_tag :description %>
          <%=text_field_tag :description, @product.description %>
        </div>


        <div class="input-group">
          <%=label_tag :inventory %>
          <%=text_field_tag :inventory, @product.inventory %>
        </div>

        <div>
          <%= submit_tag "Send", class: "btn btn-default" %>
        </div>

      <% end %>

    </div>

</div>
