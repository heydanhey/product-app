
<div class="container">
<div class="row">
  <div class="col-md-6">
    <% @products.each do |product| %>
        <a href="products/<%= product.id %>"><img src=<%= product.image %> alt=<%= product.name %> > </a>
        <h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <h4>$ <%= product.price %></h4>
    <% end %>
    </div>
</div>
</div>