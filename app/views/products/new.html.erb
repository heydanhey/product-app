<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">

  <h2>Add a new product to the store</h2>

  <div class="form">

  <%=form_tag '/products', method: :post do %>

    <div class="input-group">
      <%=label_tag :name %>
      <%=text_field_tag :name, @product.name, class: "form-control" %>
    </div>

    <div class="input-group">
      <%=label_tag :price %>
      <%=text_field_tag :price, @product.price, class: "form-control" %>
    </div>

    <div class="input-group">
      <%=label_tag :supplier %>
      <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name, {:style => "width:200px"}, class: "form-control" %>
    </div>

    <div class="input-group">
      <%=label_tag :description %>
      <%=text_field_tag :description, @product.description, class: "form-control" %>
    </div>

    <div class="input-group">
      <%=label_tag :image %>
      <%=text_field_tag :image, "http://shmector.com/preview/nature/cartoon-planet-vector_250x250.png", class: "form-control" %>
    </div>

    <div>
      <%= submit_tag "Send", class: "btn btn-default" %>
    </div>

  <% end %>

</div>

</div>


